# Toggle window snapping (float mode)
alt - s : yabai -m window --toggle float

# Change window focus within space (jkl;)
alt - j : yabai -m window --focus west
alt - k : yabai -m window --focus south
alt - l : yabai -m window --focus north
alt - 0x29 : yabai -m window --focus east

# Swap window position within space (jkl;), 0x29 + ;
shift + alt - j : yabai -m window --swap west
shift + alt - k : yabai -m window --swap south
shift + alt - l : yabai -m window --swap north
shift + alt - 0x29 : yabai -m window --swap east

# Move window to space. Switching space focus via hotkeys only works when SIP is disabled
shift + alt - 1 : yabai -m window --space 1 #&& yabai -m space --focus 1
shift + alt - 2 : yabai -m window --space 2 #&& yabai -m space --focus 2
shift + alt - 3 : yabai -m window --space 3 #&& yabai -m space --focus 3
shift + alt - 4 : yabai -m window --space 4 #&& yabai -m space --focus 4
shift + alt - 5 : yabai -m window --space 5 #&& yabai -m space --focus 5
shift + alt - 6 : yabai -m window --space 6 #&& yabai -m space --focus 6
shift + alt - 7 : yabai -m window --space 7 #&& yabai -m space --focus 7

# Open default layout (external script)
shift + alt - r : ~/.config/yabai/layout_reset.sh
